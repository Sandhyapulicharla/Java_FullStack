package nov5;

import java.util.Scanner;

public class ElectricityBill {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter units to calculate electricity bill:");
		int units=sc.nextInt();
		if(units<=100 && units>=1) {
			System.out.println("Electricity bill for "+units+" is"+units*2);
		}
		else if(units<=300 && units>=100) {
			System.out.println("Electricity bill for "+units+" is"+units*3);
		}
		else {
			System.out.println("Electricity bill for "+units+" is"+units*5);
		}
		

	}

}
